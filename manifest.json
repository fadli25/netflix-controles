{
  "manifest_version": 3,
  "name": "Netflix Video Controller",
  "version": "1.0",
  "description": "Enhanced video controls for Netflix with clean UI",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://*.netflix.com/*"],
  "content_scripts": [
    {
      "matches": ["https://*.netflix.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Netflix Controller"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
