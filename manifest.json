{
  "manifest_version": 3,
  "name": "Netflix Controls Enhancer",
  "version": "1.0",
  "description": "Hide Netflix modals and keep player controls visible",
  "permissions": ["activeTab"],
  "host_permissions": ["*://*.netflix.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Netflix Controls Enhancer"
  }
}
